header_height = 40px
footer_height = 20px

raiseText()
	color grey
	text-shadow: -1px 1px 0 white
	-moz-text-shadow: -1px 1px 0 white
	-webkit-text-shadow: -1px 1px 0 white
disableText()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

html, body 
	margin: 0
	padding: 0
	user-select: none
	
label, .subheading
	raiseText()
	
