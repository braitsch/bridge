// inventory //

#inventory .heading
	raiseText()
	font-size 1.4em
#inventory #all-services
	float left
	width 180px
	height 100%
	background #eaeaea
	border-right thin double #ccc;
#inventory #all-services .heading
	padding 20px 0 0 0
	text-align center

#inventory #our-services
	margin-left 180px
	padding 0 20px 0 20px
#inventory #our-services .heading
	padding 20px 0 0 20px
	
// service elements shared by both services & offerings
#inventory .service
	color #777
	width 100px
	margin auto
	margin-bottom 10px
	padding 10px 20px 6px 20px
	background-color white
	border 1px solid #ddd
	border-radius 5px
	disableText()
	-moz-border-radius 5px
	-webkit-border-radius 5px
#inventory .service hr
	margin 5px 0 3px 0
#inventory .service .icon
	width 100%
	cursor pointer

// specific to all-services
#inventory #all-services .service .text
	text-align center

// specific to our-services
#inventory #our-services .service
	position relative
	float left
	width 180px
	margin-left 10px
#inventory #our-services .service .edit
	width 28px
	height 28px
	cursor pointer
	position absolute
	top -10px
	right -10px
	background url('/img/icons/edit.png')
#inventory #our-services .service .text
	float left
	text-align left
#inventory #our-services .service .avail
	text-align right
#inventory #our-services .service img
	margin-left 40px
	
// need to fix this, rows not stacking correctly.. //
#inventory #our-services .services
	min-height 140px
	overflow visible
#inventory #our-services #edit-avail
	display none
#inventory #our-services #edit-avail .del, .add
	position absolute
	top 34px
	width 90px
	height 110px
	opacity 0
	cursor pointer
	background-color #333
#inventory #our-services #edit-avail .add
	margin-left 90px
#inventory #our-services #edit-avail .icon-add, .icon-del
	position absolute
	bottom 10px
#inventory #our-services #edit-avail .icon-add
	right 18px

