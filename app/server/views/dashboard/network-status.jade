
- var capitalize = function(s){return s.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();});}
div.navbar.navbar-fixed-top
	div.navbar-inner
#live
	- for (var i = orgs.length - 1; i >= 0; i--)
		- var oid = orgs[i].name.replace(' ', '-');
		div(id=oid).org
			p.orgName #{capitalize(orgs[i].name)}
			p.orgAddy #{capitalize(orgs[i].addy1)} #{orgs[i].addy2} – #{capitalize(orgs[i].city)}, #{capitalize(orgs[i].state)} – #{capitalize(orgs[i].phone)}
			#services
				- for (var k = orgs[i].inv.length - 1; k >= 0; k--)
					- var c = orgs[i].inv[k];
					.service
						.text
							.name #{capitalize(c.name)}
							.avail #{c.avail} / #{c.total}
						hr
						.img
							img(src='/img/icons/latest/icon-'+c.name+'-general.png')
		hr

