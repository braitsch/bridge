
- var capitalize = function(s){return s.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();});}

div.navbar.navbar-fixed-top
	div.navbar-inner
		div.container-fluid
			.nav.pull-left
				.brand San Francisco Bridge – Public Dashboard
			button#btn-about.btn.btn-primary
				i.icon-question-sign.icon-white
			button#btn-sign-in.btn.btn-primary
				i.icon-lock.icon-white
				| Service Providers

#dashboard
	- for (var i = orgs.length - 1; i >= 0; i--)
		- var oid = orgs[i].name.replace(' ', '-');
		div(id=oid).org
			p.orgName #{capitalize(orgs[i].name)}
			p.orgAddy #{capitalize(orgs[i].addy1)} #{orgs[i].addy2} – #{capitalize(orgs[i].city)}, #{capitalize(orgs[i].state)} – #{capitalize(orgs[i].phone)}
			#services
				- for (var k = orgs[i].inv.length - 1; k >= 0; k--)
					- var c = orgs[i].inv[k];
					.service
						.text
							.name #{capitalize(c.name)}
							.avail #{c.avail} / #{c.total}
						hr
						.img
							img(src='/img/icons/'+c.name+'.png')
		hr

include modals/about

script(src='/socket.io/socket.io.js')
script(src='/vendor/jquery.min.js')
script(src='/vendor/bootstrap-modal.js')
script(src='/vendor/bootstrap-transition.js')
script(src='/js/dashboard.js')
script(src='/js/utils/globals.js')